<?xml version="1.0" encoding="utf-8"?>

<View
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_item_edit"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="se.mit.spbau.ru.shekel.activities.AddItemActivity"
        android:gravity="top|center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addItemString"
            android:id="@+id/textView"
            android:textSize="30sp"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_alignParentTop="true"
            android:gravity="top|center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="35sp"
            android:layout_marginBottom="35sp"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nameString"
                android:textSize="24sp"
                android:id="@+id/textView2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editName"
                android:textSize="24sp"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:inputType="textAutoComplete" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/costString"
                android:textSize="24sp"
                android:id="@+id/textView3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textSize="24sp"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:ems="10"
                android:id="@+id/editCost"
                android:layout_gravity="right" />

            <ListView
                android:id="@+id/customerList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/addString"
                android:id="@+id/addNewItemButton"
                android:layout_gravity="right"
                android:onClick="addNewItem"/>

        </LinearLayout>

        <!--<Button-->
